<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#fff"
    tools:context="com.example.balu.videoupload.UserImage">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/uploadImg"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload your Image"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/loadImg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:text=""
            android:layout_gravity="center"
            android:src="@drawable/upload"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image is optional"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="#888888"
            android:padding="5dp"
            android:layout_gravity="right"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ddd"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/uploadBtn"
            android:text="Upload"

            android:textSize="@dimen/activity_horizontal_margin"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:backgroundTint="@android:color/secondary_text_dark_nodisable"
            android:layout_marginTop="22dp" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:text="Next"
            android:textSize="@dimen/activity_horizontal_margin"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:backgroundTint="@android:color/secondary_text_dark_nodisable"
            android:layout_marginTop="22dp" />
    </LinearLayout>


</LinearLayout>
